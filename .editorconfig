# http://editorconfig.org
root = true

[*.{scss,js}]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
max_line_length = 100
trim_trailing_whitespace = true

[*.{md,html}]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
max_line_length = 100
max_line_length = 0
trim_trailing_whitespace = false

[COMMIT_EDITMSG]
max_line_length = 0